{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "inlineSources": true,
    "inlineSourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "angularCompilerOptions": {
    "genDir": "../dist",
    "skipTemplateCodegen": true
  }
}
